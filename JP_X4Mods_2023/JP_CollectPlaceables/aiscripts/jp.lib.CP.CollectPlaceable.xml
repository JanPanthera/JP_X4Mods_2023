<?xml version="1.0" encoding="utf-8"?>

<aiscript name="jp.lib.CP.CollectPlaceable" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

   <order id="JP_lib_CP_CollectPlaceable" name="{8888888, 840}" category="internal" infinite="false" allowinloop="false" canplayercancel="true">
      <params>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="PLACEABLE" type="internal" default="null"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="DEBUG" type="internal" default="0"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      </params>
      <location object="@$LOCATION.{1}" position="@$LOCATION.{2}" condition="@$LOCATION.{1} and @$LOCATION.{2}"/>
      <location object="@$LOCATION.{1}" condition="@$LOCATION.{1}"/>
   </order>

   <interrupts>
      <handler ref="AttackHandler"/>
      <handler ref="MissileLockHandler" />
      <handler ref="ScannedHandler"/>
      <handler ref="InspectedHandler"/>
      <handler ref="FoundAbandonedHandler"/>
      <handler ref="FoundLockboxHandler"/>
      <handler ref="ResupplyHandler"/>
      <handler ref="TideHandler"/>
   </interrupts>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$DEBUG gt 0">
         <set_value name="$_DebugFolderName" exact="'JP_CollectPlaceables.logs'"/>
         <set_value name="$_DebugScriptName" exact="'jp.lib.CP.CollectPlaceable'"/>
         <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </init>

   <attention min="unknown">
      <actions>

         <label name="INIT_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <set_command command="command.collect" param="$PLACEABLE"/>

         <do_if value="$_Ship.sector != $PLACEABLE.sector">
            <create_order object="$_Ship" id="'JP_lib_MoveToSector'" immediate="true">
               <param name="SECTOR" value="$PLACEABLE.sector"/>
               <param name="DEBUG_FOLDER_NAME" value="@$_DebugFolderName"/>
               <param name="DEBUG" value="$DEBUG"/>
            </create_order>
         </do_if>

         <stop_moving object="$_Ship"/>
         <wait exact="1ms"/>

         <do_if value="$PLACEABLE.isclass.{class.mine}">
            <create_position name="$_Position" space="$PLACEABLE.sector" object="$PLACEABLE" y="(($PLACEABLE.height / 2) + ($_Ship.height / 2) + 1km)"/>
         </do_if>
         <do_else>
            <create_position name="$_Position" space="$PLACEABLE.sector" object="$PLACEABLE" y="(($PLACEABLE.height / 2) + ($_Ship.height / 2) + 10m)"/>
         </do_else>
         <set_value name="$LOCATION" exact="[$PLACEABLE.sector, $_Position]"/>

         <set_command command="command.move" param="$PLACEABLE"/>
         <set_command_action commandaction="commandaction.flying"/>
         
         <run_script name="'move.generic'">
            <param name="destination" value="$PLACEABLE.sector"/>
            <param name="position" value="$_Position"/>
            <param name="precise" value="true"/>
            <param name="recallsubordinates" value="false"/>
            <param name="changecommandaction" value="false"/>
            <param name="debugchance" value="0"/>
         </run_script>

         <label name="FINISH_MOVING_LBL"/>
         <stop_moving object="$_Ship" immediate="true"/>
         <wait exact="2000ms"/>

         <set_command command="command.investigate"/>
         <set_command_action commandaction="commandaction.standingby"/>

         <collect_deployable object="$_Ship" deployable="$PLACEABLE"/>

         <apply_experience entity="$_Ship.pilot" experience="'JP_SHIP_PLACEABLE_COLLECTED'"/>
         <apply_experience object="$_Ship" experience="'JP_SHIP_PLACEABLE_COLLECTED'" role="entityrole.service"/>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="FINISH_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

      </actions>
   </attention>

   <on_abort>
   </on_abort>

</aiscript>