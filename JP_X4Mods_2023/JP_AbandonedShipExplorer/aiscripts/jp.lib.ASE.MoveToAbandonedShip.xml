<?xml version="1.0" encoding="utf-8"?>

<aiscript name="jp.lib.ASE.MoveToAbandonedShip" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

   <order id="JP_lib_ASE_MoveToAbandonedShip" name="{8888888, 140}" category="internal" infinite="false" allowinloop="false" canplayercancel="true">
      <params>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="ABANDONED_SHIP" type="internal" default="null"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="ASE_MODE" type="internal" default="null"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="SHOW_MESSAGES" type="internal" default="0"/>
         <param name="WRITE_TO_LOG" type="internal" default="0"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="DEBUG" type="internal" default="0"/>
         <param name="debugchance" type="internal" default="0"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      </params>
      <location object="@$LOCATION.{1}" position="@$LOCATION.{2}" condition="@$LOCATION.{1} and @$LOCATION.{2}"/>
      <location object="@$LOCATION.{1}" condition="@$LOCATION.{1}"/>
   </order>

   <interrupts>
      <handler ref="AttackHandler"/>
      <handler ref="MissileLockHandler" />
      <handler ref="ScannedHandler"/>
      <handler ref="InspectedHandler"/>
      <handler ref="FoundLockboxHandler"/>
      <handler ref="ResupplyHandler"/>
      <handler ref="TideHandler"/>
   </interrupts>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <set_value name="$_OrderName" exact="if $_Ship.defaultorder.id == 'Assist' then $_Ship.commander.defaultorder.name else $_Ship.defaultorder.name"/>
      <set_value name="$_ASE_Title" exact="'%1 ~ %2 [%3]'.[$_OrderName, $_Ship.knownname, $_Ship.idcode]"/>
      <substitute_text source="$_ASE_Title" text="$_ASE_Title">
         <replace string="'\033#FFA95908##ASE-S\033X ~ '" with="''"/>
         <replace string="'\033#FFA95908##ASE-G\033X ~ '" with="''"/>
      </substitute_text>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$DEBUG gt 0">
         <set_value name="$_DebugFolderName" exact="'JP_AbandonedShipExplorer.logs'"/>
         <set_value name="$_DebugScriptName" exact="'jp.lib.ASE.MoveToAbandonedShip'"/>
         <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </init>

   <attention min="unknown">
      <actions>

         <label name="INIT_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <set_command command="command.investigate"/>

         <do_if value="$_Ship.sector != $ABANDONED_SHIP.sector">
            <create_order object="$_Ship" id="'JP_lib_MoveToSector'" immediate="true">
               <param name="SECTOR" value="$ABANDONED_SHIP.sector"/>
               <param name="DEBUG_FOLDER_NAME" value="@$_DebugFolderName"/>
               <param name="DEBUG" value="$DEBUG"/>
            </create_order>
         </do_if>

         <stop_moving object="$_Ship"/>
         <wait exact="1ms"/>

         <create_position name="$_Position" space="$ABANDONED_SHIP.sector" object="$ABANDONED_SHIP" y="(($ABANDONED_SHIP.height / 2) + ($_Ship.height / 2) + 10m)"/>
         <set_value name="$LOCATION" exact="[$ABANDONED_SHIP.sector, $_Position]"/>

         <set_command command="command.move" param="$ABANDONED_SHIP"/>
         <set_command_action commandaction="commandaction.flying"/>

         <run_script name="'move.generic'">
            <param name="destination" value="$ABANDONED_SHIP.sector"/>
            <param name="position" value="$_Position"/>
            <param name="precise" value="true"/>
            <param name="recallsubordinates" value="false"/>
            <param name="changecommandaction" value="false"/>
            <param name="debugchance" value="0"/>
         </run_script>

         <label name="FINISH_MOVING_LBL"/>
         <stop_moving object="$_Ship" immediate="true"/>
         <wait exact="1000ms"/>

         <set_command command="command.investigate"/>
         <set_command_action commandaction="commandaction.standingby"/>

         <run_script name="'jp.lib.GetFactionColorCode'">
            <param name="FACTION" value="$ABANDONED_SHIP.sector.owner"/>
            <save_retval name="_FactionColorCode" variable="$_ObjectSectorOwnerColor"/>
         </run_script>

         <do_if value="$ASE_MODE == 1">
            <set_value name="$_Text" exact="$_Ship.knownname + ' [' + $_Ship.idcode + ']\n' +
                                            {8888888, 121} + '\n' +
                                            $ABANDONED_SHIP.knownname + ' [' + $ABANDONED_SHIP.idcode + ']\n' +
                                            {20001, 201} + ': ' + $ABANDONED_SHIP.sector.knownname + ' ~ ' + $ABANDONED_SHIP.sector.owner.knownname + '\n' + 
                                            {8888888, 122}"/>
            <show_help custom="$_ASE_Title + '\n\n' + $_Text" position="1" duration="3s" allowclose="true" chance="$SHOW_MESSAGES"/>
            <write_to_logbook title="$_ASE_Title" text="$_Text" category="upkeep" interaction="showonmap" object="$ABANDONED_SHIP" chance="$WRITE_TO_LOG"/>
            <wait exact="999h">
               <interrupt>
                  <conditions>
                     <event_object_changed_owner object="$ABANDONED_SHIP"/>
                  </conditions>
               </interrupt>
            </wait>
         </do_if>

         <do_if value="$ASE_MODE == 2">
            <set_value name="$_Text" exact="$_Ship.knownname + ' [' + $_Ship.idcode + ']\n' +
                                            {8888888, 121} + '\n' +
                                            $ABANDONED_SHIP.knownname + ' [' + $ABANDONED_SHIP.idcode + ']\n' +
                                            {20001, 201} + ': ' + $ABANDONED_SHIP.sector.knownname + ' ~ ' + $ABANDONED_SHIP.sector.owner.knownname + '\n' + 
                                            {8888888, 123}"/>
            <show_help custom="$_ASE_Title + '\n\n' + $_Text" position="1" duration="3s" allowclose="true" chance="$SHOW_MESSAGES"/>
            <write_to_logbook title="$_ASE_Title" text="$_Text" category="upkeep" interaction="showonmap" object="$ABANDONED_SHIP" chance="$WRITE_TO_LOG"/>
            <wait exact="999h">
               <interrupt>
                  <conditions>
                     <event_entity_entered space="$_Ship"/>
                     <check_value value="event.param.isclass.player"/>
                     <check_object object="$ABANDONED_SHIP" owner="faction.player"/>
                  </conditions>
               </interrupt>
            </wait>
         </do_if>

         <apply_experience entity="$_Ship.pilot" experience="'JP_ABANDONED_SHIP_DISCOVERED'"/>
         <apply_experience object="$_Ship" experience="'JP_ABANDONED_SHIP_DISCOVERED'" role="entityrole.service"/>

         <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

         <label name="FINISH_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

      </actions>
   </attention>

   <on_abort>
   </on_abort>

</aiscript>