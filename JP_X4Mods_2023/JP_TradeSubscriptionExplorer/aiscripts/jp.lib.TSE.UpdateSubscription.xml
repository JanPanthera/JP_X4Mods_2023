<?xml version="1.0" encoding="utf-8"?>

<aiscript name="jp.lib.TSE.UpdateSubscription" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

   <order id="JP_lib_TSE_UpdateSubscription" name="{8888888, 1941}" category="internal" infinite="false" allowinloop="false" canplayercancel="true">
      <params>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="STATION" type="internal" default="null"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="DEBUG" type="internal" default="0"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      </params>
      <location object="@$LOCATION.{1}" position="@$LOCATION.{2}" condition="@$LOCATION.{1} and @$LOCATION.{2}"/>
      <location object="@$LOCATION.{1}" condition="@$LOCATION.{1}"/>
   </order>

   <interrupts>
      <handler ref="AttackHandler"/>
      <handler ref="MissileLockHandler" />
      <handler ref="ScannedHandler"/>
      <handler ref="InspectedHandler"/>
      <handler ref="FoundAbandonedHandler"/>
      <handler ref="FoundLockboxHandler"/>
      <handler ref="ResupplyHandler"/>
      <handler ref="TideHandler"/>
   </interrupts>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$DEBUG gt 0">
         <set_value name="$_DebugFolderName" exact="'JP_TradeSubscriptionExplorer.logs'"/>
         <set_value name="$_DebugScriptName" exact="'jp.lib.TSE.UpdateSubscription'"/>
         <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </init>

   <attention min="unknown">
      <actions>

         <label name="INIT_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <set_command command="command.investigate"/>

         <do_if value="$_Ship.sector != $STATION.sector">
            <set_value name="$LOCATION" exact="[$STATION.sector, null]"/>
            <set_command_action commandaction="commandaction.flyingto" param="$STATION.sector"/>
            <run_script name="'move.generic'">
               <param name="destination" value="$STATION.sector"/>
               <param name="endintargetzone" value="true"/>
               <param name="recallsubordinates" value="false"/>
               <param name="changecommandaction" value="false"/>
               <param name="debugchance" value="0"/>
            </run_script>
            <stop_moving object="$_Ship"/>
         </do_if>

         <set_command_action commandaction="commandaction.flyingto" param="$STATION"/>
         <get_safe_pos result="$_SafePos" sector="$STATION.sector" object="$STATION" radius="2km" max="4km" ignored="$_Ship" directionobject="$_Ship"/>
         <set_value name="$LOCATION" exact="[$STATION.sector, $_SafePos]"/>

         <label name="MOVE_LBL"/>
         <wait exact="1ms"/>
         <move_to object="$_Ship" destination="$STATION.sector" uselocalhighways="$_Ship.canenterhighway" travel="true" commandaction="false">
            <position space="$STATION.sector" value="$_SafePos"/>
            <interrupt_after_time time="1s"/>
         </move_to>

         <do_if value="not $STATION.hastradesubscription">
            <resume label="MOVE_LBL"/>
         </do_if>

         <wait exact="2000ms"/>
         <stop_moving object="$_Ship"/>

         <apply_experience entity="$_Ship.pilot" experience="'JP_SHIP_TRADESUBSCRIPTION_UPDATED'"/>
         <apply_experience object="$_Ship" experience="'JP_SHIP_TRADESUBSCRIPTION_UPDATED'" role="entityrole.service"/>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="FINISH_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

      </actions>
   </attention>

   <on_abort>
   </on_abort>

</aiscript>