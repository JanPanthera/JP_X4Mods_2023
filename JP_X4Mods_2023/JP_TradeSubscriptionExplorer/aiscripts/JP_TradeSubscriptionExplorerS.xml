<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_TradeSubscriptionExplorerS" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd" version="1">

   <order id="JP_TradeSubscriptionExplorerS" name="_{8888888, 1997}TradeSubscriptionExplorer - {8888888, 1999}{8888888, 1998}{20001, 201}{8888888, 1999}" description="{8888888, 1960}" category="navigation" infinite="true" allowinloop="false">
      <params>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="PLACE_HOLDER_000" text="----------------------------------" type="object" default="null">
            <input_param name="class" value="[]"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="SECTOR" text="{20001, 201}" comment="Sector" type="object" default="this.ship.sector">
            <input_param name="class" value="[class.sector]"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="PLACE_HOLDER_001" text="----------------------------------" type="object" default="null">
            <input_param name="class" value="[]"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="WHARFS" text="- {8888888, 1931}" comment="Wharfs?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{1} else true"/>
         <param name="SHIPYARDS" text="- {8888888, 1932}" comment="Shipyards?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{2} else true"/>
         <param name="EQUIPMENTDOCKS" text="- {8888888, 1933}" comment="Equipment docks?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{3} else true"/>
         <param name="TRADING_STATIONS" text="- {8888888, 1934}" comment="Trading stations?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{4} else true"/>
         <param name="PIRATE_BASES" text="- {8888888, 1935}" comment="Pirate bases?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{5} else true"/>
         <param name="RECYCLING_STATIONS" text="- {8888888, 1936}" comment="Scrap processing facilities?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{6} else true"/>
         <param name="DEFENCE_STATIONS" text="- {8888888, 1937}" comment="Defense stations?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{7} else true"/>
         <param name="FACTION_HEADQUARTERS" text="- {8888888, 1938}" comment="Faction Headquarters?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{8} else true"/>
         <param name="NON_SPECIAL_STATIONS" text="- {8888888, 1939}" comment="Non Special Stations?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{9} else true"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="PLACE_HOLDER_996" text="----------------------------------" type="object" default="null">
            <input_param name="class" value="[]"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="IDLE_TIME" text="{8888888, 1980}" comment="Idle Time" type="time" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{10} else 600s">
            <input_param name="min" value="60s"/>
            <input_param name="max" value="3600s"/>
            <input_param name="step" value="10s"/>
         </param>
         <param name="IDLE_MOVE_TO" text="{8888888, 1981}" comment="Idle: Move to?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{11} else true"/>
         <param name="WHERE_TO_MOVE" text="- {8888888, 1982}" comment="Where to move?" type="position" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{12} else [this.ship.sector, this.ship.sector.coreposition]">
            <input_param name="class" value="class.sector"/>
         </param>
         <param name="IDLE_FOLLOW" text="{8888888, 1983}" comment="Idle: Follow?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{13} else false"/>
         <param name="WHO_TO_FOLLOW" text="- {8888888, 1984}" comment="Who to follow?" type="object" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{14} else null">
            <input_param name="class" value="[class.ship]"/>
         </param>
         <param name="IDLE_DOCKING" text="{8888888, 1985}" comment="Idle: Docking?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{15} else false"/>
         <param name="FIND_STATION" text="- {8888888, 1986}" comment="Find a Station?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{16} else true"/>
         <param name="WHERE_TO_DOCK" text="- {8888888, 1987}" comment="Where to dock?" type="object" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{17} else null">
            <input_param name="class" value="if this.ship.isclass.[class.ship_s, class.ship_xs] then [class.station, class.ship_m, class.ship_l, class.ship_xl] else [class.station, class.ship_l, class.ship_xl]"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="PLACE_HOLDER_997" text="----------------------------------" type="object" default="null">
            <input_param name="class" value="[]"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="ADD_ORDER_TAG" text="{8888888, 1991}" comment="Add order tag?" type="bool" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{18} else true"/>
         <param name="SAVE_ORDER_SETTINGS" text="{8888888, 1993}" comment="Save Order Settings?" type="bool" default="false"/>
         <param name="RESET_ORDER_SETTINGS" text="{8888888, 1994}" comment="Reset Order Settings?" type="bool" default="false"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="PLACE_HOLDER_998" text="----------------------------------" type="object" default="null">
            <input_param name="class" value="[]"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="DEBUG" text="Debug" type="number" default="if global.$TradeSubscriptionExplorer_Settings? then global.$TradeSubscriptionExplorer_Settings.{19} else 0" advanced="true">
            <input_param name="step" value="100"/>
            <input_param name="min" value="0"/>
            <input_param name="max" value="100"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="PLACE_HOLDER_999" text="----------------------------------" type="object" default="null" advanced="true">
            <input_param name="class" value="[]"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      </params>
      <skill min="20"/>
      <requires>
         <match shiptype="shiptype.lasertower" negate="true"/>
      </requires>
   </order>

   <interrupts>
      <handler ref="AttackHandler"/>
      <handler ref="MissileLockHandler" />
      <handler ref="ScannedHandler"/>
      <handler ref="InspectedHandler"/>
      <handler ref="FoundAbandonedHandler"/>
      <handler ref="FoundLockboxHandler"/>
      <handler ref="ResupplyHandler"/>
      <handler ref="TideHandler"/>
   </interrupts>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <stop_moving object="$_Ship"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <add_to_group object="$_Ship" groupname="global.$TSE_ShipsGroup"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="global.$TSE_SectorBlacklist.{$_Ship}" exact="null"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$DEBUG gt 0">
         <set_value name="$_DebugFolderName" exact="'JP_TradeSubscriptionExplorer.logs'"/>
         <set_value name="$_DebugScriptName" exact="'JP_TradeSubscriptionExplorerS'"/>
         <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$SAVE_ORDER_SETTINGS">
         <create_list name="$_SettingsList"/>
         <append_list_elements name="$_SettingsList" other="[
                            $WHARFS, $SHIPYARDS, $EQUIPMENTDOCKS, $TRADING_STATIONS,
                            $PIRATE_BASES, $RECYCLING_STATIONS, $DEFENCE_STATIONS, $FACTION_HEADQUARTERS, $NON_SPECIAL_STATIONS,
                            $IDLE_TIME, $IDLE_MOVE_TO, $WHERE_TO_MOVE, $IDLE_FOLLOW, $WHO_TO_FOLLOW, $IDLE_DOCKING, $FIND_STATION, $WHERE_TO_DOCK,
                            $ADD_ORDER_TAG, $DEBUG]"/>
         <do_if value="global.$TradeSubscriptionExplorer_Settings?" negate="true">
            <create_list name="global.$TradeSubscriptionExplorer_Settings"/>
            <append_list_elements name="global.$TradeSubscriptionExplorer_Settings" other="$_SettingsList"/>
         </do_if>
         <do_else>
            <do_for_each name="$_Setting" in="global.$TradeSubscriptionExplorer_Settings" counter="$_it">
               <do_if value="$_Setting != $_SettingsList.{$_it}">
                  <set_value name="global.$TradeSubscriptionExplorer_Settings.{$_it}" exact="$_SettingsList.{$_it}"/>
               </do_if>
            </do_for_each>
         </do_else>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'global.$TradeSubscriptionExplorer_Settings'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
            <do_for_each name="$_Setting" in="global.$TradeSubscriptionExplorer_Settings" counter="$_it">
               <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="global.$TradeSubscriptionExplorer_Settings.{$_it}"/>
            </do_for_each>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>
         <remove_value name="$_SettingsList"/>
         <show_help duration="5s" allowclose="true" log="true" custom="'JP_TradeSubscriptionExplorerS' + ' ~\n' + $_Ship.knownname + ' [' + $_Ship.idcode + ']\n\n' + '{8888888, 1995}'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$RESET_ORDER_SETTINGS">
         <remove_value name="global.$TradeSubscriptionExplorer_Settings"/>
         <show_help duration="5s" allowclose="true" log="true" custom="'JP_TradeSubscriptionExplorerS' + ' ~\n' + $_Ship.knownname + ' [' + $_Ship.idcode + ']\n\n' + '{8888888, 1996}'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$SAVE_ORDER_SETTINGS or $RESET_ORDER_SETTINGS">
         <set_value name="$_Quit" exact="true"/>
      </do_if>
   </init>

   <attention min="unknown">
      <actions>

         <do_if value="$_Quit? and @$_Quit == true">
            <resume label="FINISH_LBL"/>
         </do_if>

         <label name="INIT_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <do_if value="$ADD_ORDER_TAG">
            <substitute_text source="$_Ship.knownname" text="$_ResultName">
               <replace string="'\033#FFA95908##TSE-S\033X ~ '" with="''"/>
            </substitute_text>
            <do_if value="$_Ship.knownname == $_ResultName">
               <set_object_name object="$_Ship" name="'\033#FFA95908##TSE-S\033X ~ ' + $_Ship.knownname"/>
            </do_if>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="RESUME_LBL"/>
         <wait exact="1ms"/>

         <create_list name="$_FoundStations"/>
         <run_script name="'jp.lib.TSE.GetTradesubscriptionsToUpdate'">
            <param name="SECTOR"                  value="$SECTOR"/>
            <param name="WHARFS"                  value="$WHARFS"/>
            <param name="SHIPYARDS"               value="$SHIPYARDS"/>
            <param name="EQUIPMENTDOCKS"          value="$EQUIPMENTDOCKS"/>
            <param name="TRADING_STATIONS"        value="$TRADING_STATIONS"/>
            <param name="PIRATE_BASES"            value="$PIRATE_BASES"/>
            <param name="RECYCLING_STATIONS"      value="$RECYCLING_STATIONS"/>
            <param name="DEFENCE_STATIONS"        value="$DEFENCE_STATIONS"/>
            <param name="FACTION_HEADQUARTERS"    value="$FACTION_HEADQUARTERS"/>
            <param name="NON_SPECIAL_STATIONS"    value="$NON_SPECIAL_STATIONS"/>
            <param name="DEBUG"                   value="$DEBUG"/>
            <save_retval name="_FoundStations" variable="$_FoundStations"/>
         </run_script>

         <do_if value="$_FoundStations.count == 0">
            <resume label="IDLE_LBL"/>
         </do_if>

         <do_if value="$_FoundStations.count gt 0">
            <do_for_each name="$_FoundStation" in="$_FoundStations">
               <create_order object="$_Ship" id="'JP_lib_TSE_UpdateSubscription'" immediate="true">
                  <param name="STATION" value="$_FoundStation"/>
                  <param name="DEBUG"  value="$DEBUG"/>
               </create_order>
               <break/>
            </do_for_each>
         </do_if>

         <resume label="RESUME_LBL"/>

         <label name="IDLE_LBL"/>
         <wait exact="1ms"/>
         <create_order object="$_Ship" id="'JP_lib_TSE_IdleReturnHome'">
            <param name="IDLE_TIME" value="$IDLE_TIME"/>
            <param name="IDLE_MOVE_TO" value="$IDLE_MOVE_TO"/>
            <param name="WHERE_TO_MOVE" value="$WHERE_TO_MOVE"/>
            <param name="IDLE_FOLLOW" value="$IDLE_FOLLOW"/>
            <param name="WHO_TO_FOLLOW" value="$WHO_TO_FOLLOW"/>
            <param name="IDLE_DOCKING" value="$IDLE_DOCKING"/>
            <param name="FIND_STATION" value="$FIND_STATION"/>
            <param name="WHERE_TO_DOCK" value="$WHERE_TO_DOCK"/>
            <param name="DEBUG" value="$DEBUG"/>
         </create_order>

         <resume label="RESUME_LBL"/>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="FINISH_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

         <set_order_syncpoint_reached order="this.ship.defaultorder"/>
         <create_order object="this.ship" id="'Wait'" default="true"/>

      </actions>
   </attention>

   <on_abort>
      <stop_moving object="this.ship"/>
   </on_abort>

</aiscript>
