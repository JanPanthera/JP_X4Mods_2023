<?xml version="1.0" encoding="utf-8"?>

<aiscript name="jp.lib.TSE.GetTradesubscriptionsToUpdate" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

   <params>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="SECTOR" default="null"/>
      <param name="OWNERLESS_SECTORS" default="true"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="WHARFS"               default="false"/>
      <param name="SHIPYARDS"            default="false"/>
      <param name="EQUIPMENTDOCKS"       default="false"/>
      <param name="TRADING_STATIONS"     default="false"/>
      <param name="PIRATE_BASES"         default="false"/>
      <param name="RECYCLING_STATIONS"   default="false"/>
      <param name="DEFENCE_STATIONS"     default="false"/>
      <param name="FACTION_HEADQUARTERS" default="false"/>
      <param name="NON_SPECIAL_STATIONS" default="false"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="DEBUG" default="0"/>
      <param name="debugchance" default="0"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </params>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <create_list name="$_Sectors"/>
      <create_list name="$_FoundStations"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <append_to_list name="$_Sectors" exact="$SECTOR" chance="if @$SECTOR != null then 100 else 0"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$DEBUG gt 0">
         <set_value name="$_DebugFolderName" exact="'JP_TradeSubscriptionExplorer.logs'"/>
         <set_value name="$_DebugScriptName" exact="'jp.lib.TSE.GetTradesubscriptionsToUpdate'"/>
         <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </init>

   <attention min="unknown">
      <actions>

         <label name="INIT_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <set_command command="command.scan"/>
         <set_command_action commandaction="commandaction.calculating"/>

         <do_while value="global.$TSEGetTradesubscriptionsToUpdateAlreadyProcessing?">
            <wait exact="1ms" comment="danger!"/>
         </do_while>
         <set_value name="global.$TSEGetTradesubscriptionsToUpdateAlreadyProcessing"/>

         <label name="RESUME_LBL"/>
         <wait exact="1ms"/>

         <include_interrupt_actions ref="GetBlacklistgroup"/>

         <do_if value="$SECTOR == null">
            <do_if value="$OWNERLESS_SECTORS">
               <find_sector name="$_Sectors" space="player.galaxy" multiple="true" accessgrantedto="$_Ship.owner">
                  <match knownto="$_Ship.owner"/>
                  <match_gate_distance object="$_Ship" min="0"/>
                  <match_use_blacklist object="$_Ship" type="blacklisttype.sectortravel" group="$blacklistgroup"/>
               </find_sector>
            </do_if>
            <do_else>
               <find_sector name="$_Sectors" space="player.galaxy" multiple="true" accessgrantedto="$_Ship.owner">
                  <match knownto="$_Ship.owner"/>
                  <match owner="faction.ownerless" negate="true"/>
                  <match_gate_distance object="$_Ship" min="0"/>
                  <match_use_blacklist object="$_Ship" type="blacklisttype.sectortravel" group="$blacklistgroup"/>
               </find_sector>
            </do_else>
            <do_if value="@global.$TSE_SectorBlacklist.keys.count gt 0">
               <create_list name="$_BlacklistedSectors"/>
               <do_for_each name="$__Ship" valuename="$__Sector" in="global.$TSE_SectorBlacklist">
                  <do_if value="$__Ship != $_Ship and @$__Sector != null">
                     <append_to_list name="$_BlacklistedSectors" exact="$__Sector"/>
                  </do_if>
               </do_for_each>
               <remove_from_list name="$_Sectors" list="$_BlacklistedSectors"/>
               <remove_value name="$_BlacklistedSectors"/>
            </do_if>
            <do_if value="$_Sectors.count gt 1">
               <run_script name="'jp.lib.SortByEstimatedTravelTime'">
                  <param name="LIST" value="$_Sectors"/>
                  <param name="DEBUG_FOLDER_NAME" value="@$_DebugFolderName"/>
                  <param name="DEBUG" value="$DEBUG"/>
                  <save_retval name="_SortedList" variable="$_Sectors"/>
               </run_script>
            </do_if>
         </do_if>

         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'$_Sectors.count: %1'.[$_Sectors.count]"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
            <do_for_each name="$_Sector" in="$_Sectors">
               <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'$_Sector: %1 ~ Owner: %2'.[$_Sector.knownname, $_Sector.owner]"/>
            </do_for_each>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

         <do_for_each name="$_Sector" in="$_Sectors">

            <create_list name="$_Stations"/>
            <find_object name="$_Stations" space="$_Sector" multiple="true" checkoperational="false">
               <match knownto="$_Ship.owner"/>
               <match exactclass="class.station"/>
               <match tradesknownto="$_Ship.owner" negate="true"/>
               <match_use_blacklist object="$_Ship" type="blacklisttype.sectoractivity" group="$blacklistgroup"/>
            </find_object>
            <do_for_each name="$_Station" in="$_Stations">
               <do_if value=" ($_Station.iswharf and $WHARFS) or
                              ($_Station.isshipyard and $SHIPYARDS) or
                              ($_Station.isequipmentdock and not $_Station.iswharf and not $_Station.isshipyard and not $_Station.ispiratebase and $EQUIPMENTDOCKS) or
                              ($_Station.istradestation and $TRADING_STATIONS) or
                              ($_Station.ispiratebase and $PIRATE_BASES) or
                              ($_Station.isrecyclingfacility and $RECYCLING_STATIONS) or
                              ($_Station.isdefencestation and not $_Station.iswharf and not $_Station.isshipyard and not $_Station.isequipmentdock and not $_Station.istradestation and not $_Station.ispiratebase and not $_Station.isfactionheadquarters and $DEFENCE_STATIONS) or
                              ($_Station.isfactionheadquarters and not $_Station.ispiratebase and $FACTION_HEADQUARTERS) or
                              (not $_Station.isconstruction and
                               not $_Station.iswharf and
                               not $_Station.isshipyard and
                               not $_Station.isequipmentdock and
                               not $_Station.istradestation and
                               not $_Station.ispiratebase and
                               not $_Station.isrecyclingfacility and
                               not $_Station.isdefencestation and
                               not $_Station.isfactionheadquarters and
                               $NON_SPECIAL_STATIONS) and
                               not $_Station.iswreck">
                  <append_to_list name="$_FoundStations" exact="$_Station"/>
               </do_if>
            </do_for_each>
            <remove_value name="$_Stations"/>

            <do_if value="$_FoundStations.count gt 0">
               <do_if value="$_FoundStations.count gt 1">
                  <run_script name="'jp.lib.SortByEstimatedTravelTime'">
                     <param name="LIST" value="$_FoundStations"/>
                     <param name="DEBUG_FOLDER_NAME" value="@$_DebugFolderName"/>
                     <param name="DEBUG" value="$DEBUG"/>
                     <save_retval name="_SortedList" variable="$_FoundStations"/>
                  </run_script>
               </do_if>
               <set_value name="$SECTOR" exact="$_Sector"/>
               <do_if value="$DEBUG gt 0">
                  <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
                  <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'Sector: %1 ~ $_FoundStations.count: %2'.[$SECTOR.knownname, $_FoundStations.count]"/>
                  <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
                  <do_for_each name="$_FoundStation" in="$_FoundStations">
                     <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'$_FoundStation: %1 [%2] ~ Owner: %3'.[$_FoundStation.knownname, $_FoundStation.idcode, $_FoundStation.owner]"/>
                  </do_for_each>
                  <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
               </do_if>
               <break/>
            </do_if>
            
         </do_for_each>

         <do_if value="$_FoundStations.count == 0 and @global.$TSE_SectorBlacklist.{$_Ship} != null">
            <set_value name="global.$TSE_SectorBlacklist.{$_Ship}" exact="null"/>
            <do_if value="$_Ship.defaultorder.id == 'JP_TradeSubscriptionExplorerG' or $_Ship.defaultorder.id == 'Assist'">
               <set_value name="$SECTOR" exact="null"/>
               <resume label="RESUME_LBL"/>
            </do_if>
         </do_if>

         <do_if value="$_FoundStations.count gt 0">
            <set_value name="global.$TSE_SectorBlacklist.{$_Ship}" exact="$SECTOR"/>
         </do_if>

         <remove_value name="global.$TSEGetTradesubscriptionsToUpdateAlreadyProcessing"/>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="FINISH_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

         <return>
            <retval name="_FoundStations" value="$_FoundStations"/>
         </return>

      </actions>
   </attention>

   <on_abort>
      <remove_value name="global.$TSEGetTradesubscriptionsToUpdateAlreadyProcessing"/>
   </on_abort>

</aiscript>