<?xml version="1.0" encoding="utf-8"?>

<aiscript name="jp.lib.CDI.CollectInventoryDrop" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

   <order id="JP_lib_CDI_CollectInventoryDrop" name="{8888888, 2040}" category="internal" infinite="false" allowinloop="false" canplayercancel="true">
      <params>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="SECTOR"           type="internal" default="null"/>
         <param name="INVENTORY_DROP"   type="internal" default="null"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="POSITION"    type="internal" default="null"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="debugchance" type="internal" default="0"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      </params>
      <location object="$INVENTORY_DROP" condition="@$INVENTORY_DROP != null"/>
      <location object="this.$LOCATION.{1}" position="this.$LOCATION.{2}" condition="@this.$LOCATION.{1} != null and @this.$LOCATION.{2} != null"/>
   </order>

   <interrupts>
      <handler>
         <conditions>
            <event_object_destroyed object="$INVENTORY_DROP"/>
         </conditions>
         <actions>
            <abort_called_scripts resume="END_LBL"/>
         </actions>
      </handler>
      <handler ref="AttackHandler"/>
      <handler ref="MissileLockHandler" />
      <handler ref="ScannedHandler"/>
      <handler ref="InspectedHandler"/>
      <handler ref="FoundAbandonedHandler"/>
      <handler ref="FoundLockboxHandler"/>
      <handler ref="ResupplyHandler"/>
      <handler ref="TideHandler"/>
   </interrupts>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <add_to_group groupname="global.$CDI_ShipsGroup" object="$_Ship"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$DEBUG" exact="@$_DefaultOrderParamRef.$DEBUG"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$DEBUG gt 0">
         <set_value name="$_DebugFolderName" exact="@$_DefaultOrderParamRef.$DEBUG_FOLDER_NAME"/>
         <set_value name="$_DebugScriptName" exact="'jp.lib.CDI.CollectInventoryDrop'"/>
         <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </init>

   <attention min="unknown">
      <actions>

         <label name="INIT_LBL"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <set_command command="command.scan"/>
         <set_command_action commandaction="commandaction.calculating"/>

         <create_position name="$POSITION" space="$SECTOR" object="$INVENTORY_DROP"/>

         <run_script name="'jp.lib.MoveToObject'">
            <param name="OBJECT" value="$INVENTORY_DROP"/>
            <param name="POSITION_SPACE" value="$_Ship"/>
            <param name="DISTANCE_TO_OBJECT" value="1m"/>
            <param name="FORCE_POSITION" value="true"/>
            <param name="FINISH_ON_APPROACH" value="true"/>
         </run_script>

         <do_if value="not $INVENTORY_DROP.exists">
            <resume label="END_LBL"/>
         </do_if>

         <set_command command="command.collect" param="$INVENTORY_DROP"/>
         <set_value name="$_InventoryName" exact="$INVENTORY_DROP.knownname"/>

         <wait exact="3s"/>
         <set_command command="command.investigate"/>
         <collect_drop object="$_Ship" drop="$INVENTORY_DROP"/>
         <wait exact="3s"/>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <run_script name="'jp.lib.GetFactionColorCode'" result="$_ObjectSectorOwnerColor">
            <param name="FACTION" value="$SECTOR.owner"/>
         </run_script>

         <!-- Collected: %1\nSector: %3%2\033X -->
         <set_value name="$_Text" exact="{8888888, 2064}.[$_InventoryName, $SECTOR.knownname, $_ObjectSectorOwnerColor]"/>

         <run_script name="'jp.lib.MessageLog'">
            <param name="TEXT"               value="$_Text"/>
            <param name="INTERACTION_OBJECT" value="$SECTOR"/>
            <param name="MESSAGE_CHANCE"     value="3"/>
            <param name="LOG_CHANCE"         value="3"/>
         </run_script>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <apply_experience entity="$_Ship.pilot" experience="'JP_SHIP_INVENTORY_COLLECTED'"/>
         <apply_experience object="$_Ship" experience="'JP_SHIP_INVENTORY_COLLECTED'" role="entityrole.service"/>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="END_LBL"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

      </actions>
   </attention>

   <on_abort>
   </on_abort>

</aiscript>