<?xml version="1.0" encoding="utf-8"?>

<aiscript name="jp.lib.DVE.GetDataVaultsToMark" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

   <params>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="DEBUG" default="null"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </params>

   <interrupts>
      <handler ref="AttackHandler"/>
      <handler ref="MissileLockHandler" />
      <handler ref="ScannedHandler"/>
      <handler ref="InspectedHandler"/>
      <handler ref="FoundAbandonedHandler"/>
      <handler ref="FoundLockboxHandler"/>
      <handler ref="ResupplyHandler"/>
      <handler ref="TideHandler"/>
   </interrupts>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <create_list name="$_FoundDataVaults"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$DEBUG gt 0">
         <set_value name="$_DebugFolderName" exact="'JP_DataVaultExplorer.logs'"/>
         <set_value name="$_DebugScriptName" exact="'jp.lib.DVE.GetDataVaultsToMark'"/>
         <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </init>

   <attention min="unknown">
      <actions>

         <label name="INIT_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <set_command command="command.scan"/>
         <set_command_action commandaction="commandaction.calculating"/>

         <include_interrupt_actions ref="GetBlacklistgroup"/>

         <find_object name="$_FoundDataVaults" space="player.galaxy" multiple="true">
            <match datavault="true"/>
            <match_use_blacklist object="$_Ship" type="blacklisttype.sectortravel" group="$blacklistgroup"/>
         </find_object>

         <!-- Workaround to get blacklists running for datavaults -->
         <do_for_each name="$_FoundDataVault" in="$_FoundDataVaults" reverse="true">
            <do_if value="$_FoundDataVault.sector.isblacklisted.{blacklisttype.sectortravel}.{$blacklistgroup}.{$_Ship}">
               <remove_from_list name="$_FoundDataVaults" exact="$_FoundDataVault"/>
            </do_if>
         </do_for_each>

         <create_list name="$_SectorTravelTimes"/>
         <do_for_each name="$_FoundDataVault" in="$_FoundDataVaults">
            <estimate_travel_time ship="$_Ship" start="$_Ship" target="$_FoundDataVault" result="$_TravelTime"/>
            <append_to_list name="$_SectorTravelTimes" exact="[$_FoundDataVault, $_TravelTime]"/>
         </do_for_each>
         <sort_list list="$_SectorTravelTimes" sortbyvalue="loop.element.{2}"/>
         <clear_list list="$_FoundDataVaults"/>
         <do_for_each name="$_SectorTravelTime" in="$_SectorTravelTimes">
            <append_to_list name="$_FoundDataVaults" exact="$_SectorTravelTime.{1}"/>
         </do_for_each>

         <do_for_each name="$_FoundDataVault" in="$_FoundDataVaults" reverse="true">
            <set_value name="$_NavBeacon" exact="null"/>
            <find_object name="$_NavBeacon" space="$_FoundDataVault.sector" multiple="false">
               <match class="class.navbeacon"/>
               <match owner="$_Ship.owner"/>
               <match_distance object="$_FoundDataVault" space="$_FoundDataVault.sector" max="10km"/>
            </find_object>
            <do_if value="@$_NavBeacon != null">
               <remove_from_list name="$_FoundDataVaults" exact="$_FoundDataVault"/>
            </do_if>
         </do_for_each>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="FINISH_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

         <return>
            <retval name="_FoundDataVaults" value="$_FoundDataVaults"/>
         </return>

      </actions>
   </attention>

   <on_abort>
   </on_abort>

</aiscript>