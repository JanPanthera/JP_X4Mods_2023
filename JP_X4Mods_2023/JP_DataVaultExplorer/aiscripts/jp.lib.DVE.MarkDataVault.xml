<?xml version="1.0" encoding="utf-8"?>

<aiscript name="jp.lib.DVE.MarkDataVault" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

   <order id="JP_lib_DVE_MarkDataVault" name="{8888888, 941}" category="internal" infinite="false" allowinloop="false" canplayercancel="true">
      <params>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="DATA_VAULT" type="internal" default="null"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="DEBUG" type="internal" default="0"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      </params>
      <location object="@$LOCATION.{1}" position="@$LOCATION.{2}" condition="@$LOCATION.{1} and @$LOCATION.{2}"/>
      <location object="@$LOCATION.{1}" condition="@$LOCATION.{1}"/>
   </order>

   <interrupts>
      <handler ref="AttackHandler"/>
      <handler ref="MissileLockHandler" />
      <handler ref="ScannedHandler"/>
      <handler ref="InspectedHandler"/>
      <handler ref="FoundAbandonedHandler"/>
      <handler ref="FoundLockboxHandler"/>
      <handler ref="ResupplyHandler"/>
      <handler ref="TideHandler"/>
   </interrupts>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_DebugFolderName" exact="'JP_DataVaultExplorer.logs'"/>
      <set_value name="$_DebugScriptName" exact="'jp.lib.DVE.MarkDataVault'"/>
      <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </init>

   <attention min="unknown">
      <actions>

         <label name="INIT_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <set_command command="command.investigate"/>

         <do_if value="$_Ship.sector != $DATA_VAULT.sector">
            <set_value name="$LOCATION" exact="[$DATA_VAULT.sector, null]"/>
            <set_command_action commandaction="commandaction.flyingto" param="$DATA_VAULT.sector"/>
            <run_script name="'move.generic'">
               <param name="destination" value="$DATA_VAULT.sector"/>
               <param name="endintargetzone" value="true"/>
               <param name="recallsubordinates" value="false"/>
               <param name="changecommandaction" value="false"/>
               <param name="debugchance" value="0"/>
            </run_script>
            <stop_moving object="$_Ship"/>
         </do_if>

         <set_command_action commandaction="commandaction.flyingto" param="$DATA_VAULT"/>
         <get_safe_pos result="$_SafePos" sector="$DATA_VAULT.sector" object="$DATA_VAULT" radius="2km" max="4km" ignored="$_Ship" directionobject="$_Ship"/>
         <set_value name="$LOCATION" exact="[$DATA_VAULT.sector, $_SafePos]"/>

         <move_to object="$_Ship" destination="$DATA_VAULT.sector" forceposition="true" uselocalhighways="$_Ship.canenterhighway" travel="true" commandaction="false">
            <position space="$DATA_VAULT.sector" value="$_SafePos"/>
         </move_to>

         <wait exact="2000ms"/>
         <stop_moving object="$_Ship"/>

         <launch_navbeacon object="$_Ship" category="deployablecategory.navbeacon" name="$_NavBeacon"/>
         <set_object_velocity object="$_NavBeacon">
            <linear x="0" y="0" z="0"/>
         </set_object_velocity>

         <set_object_name object="$_NavBeacon" name="'\033#FF00CC66#' + '{20109,8901}' + '\033X\033#FF00CCCC#' + ' ~ ' + $_NavBeacon.sector.knownname + '\033X'"/>

         <apply_experience entity="$_Ship.pilot" experience="'JP_SHIP_DATAVAULT_MARKED'"/>
         <apply_experience object="$_Ship" experience="'JP_SHIP_DATAVAULT_MARKED'" role="entityrole.service"/>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="FINISH_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

      </actions>
   </attention>

   <on_abort>
   </on_abort>

</aiscript>