<?xml version="1.0" encoding="utf-8"?>

<aiscript name="JP_DataVaultExplorerG" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

   <order id="JP_DataVaultExplorerG" name="_{8888888, 997}DataVaultExplorer - {8888888, 999}{8888888, 998}{20001, 901}{8888888, 999}" description="{8888888, 961}" category="navigation" infinite="true" allowinloop="false">
      <params>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="PLACE_HOLDER_000" text="----------------------------------" type="object" default="null">
            <input_param name="class" value="[]"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="RESTOCK_NAV_BEACONS" text="{8888888, 910}" comment="Restock navigation beacons?" type="bool" default="true"/>
         <param name="RESTOCK_AMOUNT_CAP" text="- {8888888, 911}" comment="Restock amount cap" type="number" default="10">
            <input_param name="min" value="2"/>
            <input_param name="max" value="(if this.ship.ammostorage.deployable.capacity gt 0 then this.ship.ammostorage.deployable.capacity else 0)"/>
            <input_param name="step" value="2"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="PLACE_HOLDER_997" text="----------------------------------" type="object" default="null">
            <input_param name="class" value="[]"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="ADD_ORDER_TAG" text="{8888888, 991}" comment="Add order tag?" type="bool" default="true"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="PLACE_HOLDER_998" text="----------------------------------" type="object" default="null">
            <input_param name="class" value="[]"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="DEBUG" text="Debug" type="number" default="0" advanced="true">
            <input_param name="step" value="100"/>
            <input_param name="min" value="0"/>
            <input_param name="max" value="100"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="PLACE_HOLDER_999" text="----------------------------------" type="object" default="null" advanced="true">
            <input_param name="class" value="[]"/>
         </param>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      </params>
      <skill min="45"/>
      <requires>
         <match shiptype="shiptype.lasertower" negate="true"/>
      </requires>
   </order>

   <interrupts>
      <handler ref="AttackHandler"/>
      <handler ref="MissileLockHandler" />
      <handler ref="ScannedHandler"/>
      <handler ref="InspectedHandler"/>
      <handler ref="FoundAbandonedHandler"/>
      <handler ref="FoundLockboxHandler"/>
      <handler ref="ResupplyHandler"/>
      <handler ref="TideHandler"/>
   </interrupts>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <set_value name="$_NavBeaconMacro" exact="ware.waypointmarker_01.objectmacro"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <add_to_group object="$_Ship" groupname="global.$DVE_ShipsGroup"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$DEBUG gt 0">
         <set_value name="$_DebugFolderName" exact="'JP_DataVaultExplorer.logs'"/>
         <set_value name="$_DebugScriptName" exact="'JP_DataVaultExplorerG'"/>
         <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </init>

   <attention min="unknown">
      <actions>

         <label name="INIT_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <do_if value="$ADD_ORDER_TAG">
            <substitute_text source="$_Ship.knownname" text="$_ResultName">
               <replace string="'\033#FFA95908##DVE-G\033X ~ '" with="''"/>
            </substitute_text>
            <do_if value="$_Ship.knownname == $_ResultName">
               <set_object_name object="$_Ship" name="'\033#FFA95908##DVE-G\033X ~ ' + $_Ship.knownname"/>
            </do_if>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="RESUME_LBL"/>
         <wait exact="1ms"/>

         <do_if value="$_Ship.ammostorage.{$_NavBeaconMacro}.count le 0">
            <set_value name="$_GoRestock" exact="true"/>
         </do_if>

         <!-- No navigationbeacons available, and the restocking of navigationbeacons is deactivated. -->
         <do_if value="@$_GoRestock and not $RESTOCK_NAV_BEACONS">
            <show_help duration="5s" allowclose="true" log="true" custom="'JP_DataVaultExplorerG' + ' ~\n' + $_Ship.knownname + ' [' + $_Ship.idcode + ']\n\n' + '{8888888, 951}'"/>
            <resume label="FINISH_LBL"/>
         </do_if>

         <do_if value="@$_GoRestock">
            <run_script name="'jp.lib.DVE.RestockNavBeacons'">
               <param name="RESTOCK_AMOUNT_CAP" value="$RESTOCK_AMOUNT_CAP"/>
               <param name="DEBUG" value="$DEBUG"/>
               <save_retval name="RESULT" variable="$_Result"/>
            </run_script>
            <do_if value="$_Result == 'Idle'">
               <resume label="FINISH_LBL"/>
            </do_if>
         </do_if>

         <create_list name="$_FoundDataVaults"/>
         <run_script name="'jp.lib.DVE.GetDataVaultsToMark'">
            <param name="DEBUG" value="$DEBUG"/>
            <save_retval name="_FoundDataVaults" variable="$_FoundDataVaults"/>
         </run_script>

         <!-- We have not found any data vaults that we can reach or need to mark. -->
         <do_if value="$_FoundDataVaults.count le 0">
            <show_help duration="5s" allowclose="true" log="true" custom="'JP_DataVaultExplorerG' + ' ~\n' + $_Ship.knownname + ' [' + $_Ship.idcode + ']\n\n' + '{8888888, 954}'"/>
            <resume label="FINISH_LBL"/>
         </do_if>

         <create_order object="$_Ship" id="'JP_lib_DVE_MarkDataVault'" immediate="true">
            <param name="DATA_VAULT" value="$_FoundDataVaults.{1}"/>
            <param name="DEBUG" value="$DEBUG"/>
         </create_order>

         <resume label="RESUME_LBL"/>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="FINISH_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

         <set_order_syncpoint_reached order="this.ship.defaultorder"/>
         <create_order object="this.ship" id="'Wait'" default="true"/>

      </actions>
   </attention>

   <on_abort>
   </on_abort>

</aiscript>