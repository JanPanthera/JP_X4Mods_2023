<?xml version="1.0" encoding="utf-8"?>

<aiscript name="jp.lib.SD.GetOptimizedSatellitePositions" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

   <params>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="OBJECTS" default="null"/>
      <param name="RADAR_RANGE" default="null"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="DEBUG" default="this.ship.defaultorder.$DEBUG"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </params>

   <interrupts>
      <handler ref="SectorChangeHandler"/>
      <handler ref="TargetInvalidHandler"/>
      <handler ref="AttackHandler"/>
      <handler ref="MissileLockHandler" />
      <handler ref="ScannedHandler"/>
      <handler ref="InspectedHandler"/>
      <handler ref="FoundAbandonedHandler"/>
      <handler ref="FoundLockboxHandler"/>
      <handler ref="ResupplyHandler"/>
      <handler ref="TideHandler"/>
   </interrupts>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$DEBUG gt 0">
         <set_value name="$_DebugFolderName" exact="'JP_SatelliteDropper.logs'"/>
         <set_value name="$_DebugScriptName" exact="'jp.lib.SD.GetOptimizedSatellitePositions'"/>
         <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </init>

   <attention min="unknown">
      <actions>

         <label name="INIT_LBL"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <set_command command="command.scan"/>
         <set_command_action commandaction="commandaction.calculating"/>

         <do_if value="@$OBJECTS == null">
            <do_if value="$DEBUG">
               <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
               <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'OBJECTS is null'"/>
               <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
            </do_if>
            <resume label="FINISH_LBL"/>
            <set_value name="$_Result" exact="'Terminate'"/>
         </do_if>

         <create_list name="$_Objects"/>
         <do_for_each name="$_FoundObject" in="$OBJECTS">
            <create_position name="$_Position" object="$_FoundObject" space="$_FoundObject.sector"/>
            <append_to_list name="$_Objects" exact="$_Position"/>
         </do_for_each>

         <do_if value="$DEBUG">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'$_Objects: ' + $_Objects"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

         <create_list name="$_SatellitesPositions"/>

         <do_while value="$_Objects.count gt 0">
            <set_value name="$_MaxCoverObject" exact="$_Objects.{1}"/>
            <set_value name="$_MaxCover" exact="0"/>
            <do_for_each name="$_Object" in="$_Objects">
               <create_list name="$_ObjectsInRange"/>
               <do_for_each name="$_PotentialObject" in="$_Objects">
                  <set_value name="$_Distance" exact="sqrt(($_PotentialObject.x - $_Object.x)^2 + ($_PotentialObject.y - $_Object.y)^2 + ($_PotentialObject.z - $_Object.z)^2)"/>
                  <do_if value="$_Distance le $RADAR_RANGE">
                     <append_to_list name="$_ObjectsInRange" exact="$_PotentialObject"/>
                  </do_if>
               </do_for_each>
               <do_if value="$_ObjectsInRange.count gt $_MaxCover">
                  <set_value name="$_MaxCover" exact="$_ObjectsInRange.count"/>
                  <set_value name="$_MaxCoverObject" exact="$_Object"/>
               </do_if>
            </do_for_each>
            <append_to_list name="$_SatellitesPositions" exact="$_MaxCoverObject"/>
            <create_list name="$_RemainingObjects"/>
            <do_for_each name="$_Object" in="$_Objects">
               <set_value name="$_Distance" exact="sqrt(($_Object.x - $_MaxCoverObject.x)^2 + ($_Object.y - $_MaxCoverObject.y)^2 + ($_Object.z - $_MaxCoverObject.z)^2)"/>
               <do_if value="$_Distance gt $RADAR_RANGE">
                  <append_to_list name="$_RemainingObjects" exact="$_Object"/>
               </do_if>
            </do_for_each>
            <set_value name="$_Objects" exact="$_RemainingObjects"/>
         </do_while>

         <do_if value="$DEBUG">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'$_SatellitesPositions: ' + $_SatellitesPositions"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

         <set_value name="$_Result" exact="'Success'"/>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="FINISH_LBL"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

         <wait exact="1ms"/>

         <return>
            <retval name="_SatellitesPositions" value="$_SatellitesPositions"/>
            <retval name="_Result" value="$_Result"/>
         </return>

      </actions>
   </attention>

   <on_abort>
   </on_abort>

</aiscript>