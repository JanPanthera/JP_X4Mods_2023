<?xml version="1.0" encoding="utf-8"?>

<aiscript name="jp.lib.SD.PlaceSatelliteToPosition" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

   <order id="JP_lib_SD_PlaceSatelliteToPosition" name="{8888888, 1440}" category="internal" infinite="false" allowinloop="false" canplayercancel="true">
      <params>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="SECTOR" type="internal" default="null"/>
         <param name="POSITION" type="internal" default="null"/>
         <param name="SATELLITE_MACRO" type="internal" default="null"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
         <param name="DEBUG" type="internal" default="0"/>
         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      </params>
      <location object="@$LOCATION.{1}" position="@$LOCATION.{2}" condition="@$LOCATION.{1} and @$LOCATION.{2}"/>
      <location object="@$LOCATION.{1}" condition="@$LOCATION.{1}"/>
   </order>

   <interrupts>
      <handler ref="AttackHandler"/>
      <handler ref="MissileLockHandler" />
      <handler ref="ScannedHandler"/>
      <handler ref="InspectedHandler"/>
      <handler ref="FoundAbandonedHandler"/>
      <handler ref="FoundLockboxHandler"/>
      <handler ref="ResupplyHandler"/>
      <handler ref="TideHandler"/>
   </interrupts>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$DEBUG gt 0">
         <set_value name="$_DebugFolderName" exact="'JP_SatelliteDropper.logs'"/>
         <set_value name="$_DebugScriptName" exact="'jp.lib.SD.PlaceSatelliteToPosition'"/>
         <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </init>

   <attention min="unknown">
      <actions>

         <label name="INIT_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <set_command command="command.investigate"/>

         <include_interrupt_actions ref="GetBlacklistgroup"/>

         <label name="MOVE_TO_SECTOR_LBL"/>
         <wait exact="1000ms"/>
         <do_if value="$_Ship.sector != $SECTOR">
            <remove_value name="$_PathComponents"/>
            <get_jump_path component="$_PathComponents" refobject="$_Ship" uselocalhighways="$_Ship.canenterhighway" multiple="true" useblacklist="$blacklistgroup">
               <start object="$_Ship"/>
               <end object="$SECTOR"/>
            </get_jump_path>
            <do_if value="$_PathComponents.count lt 2">
               <get_jump_path component="$_PathComponents" refobject="$_Ship" uselocalhighways="$_Ship.canenterhighway" multiple="true">
                  <start object="$_Ship"/>
                  <end object="$SECTOR"/>
               </get_jump_path>
            </do_if>
            <do_for_each name="$_PathComponent" in="$_PathComponents" counter="$_it">
               <do_if value="$_PathComponent.sector == $_Ship.sector">
                  <continue/>
               </do_if>
               <set_command_action commandaction="commandaction.flyingto" param="$_PathComponent.sector"/>
               <set_value name="$LOCATION" exact="[$_PathComponent.sector, null]"/>
               <run_script name="'move.generic'" result="$_MoveSuccess">
                  <param name="destination" value="$_PathComponent"/>
                  <param name="endintargetzone" value="true"/>
                  <param name="recallsubordinates" value="false"/>
                  <param name="changecommandaction" value="false"/>
                  <param name="debugchance" value="0"/>
               </run_script>
               <resume label="MOVE_TO_SECTOR_LBL"/>
            </do_for_each>
         </do_if>

         <stop_moving object="$_Ship"/>
         <wait exact="1ms"/>

         <create_position name="$_Position" space="$SECTOR" value="$POSITION"/>
         <set_value name="$LOCATION" exact="[$SECTOR, $_Position]"/>
         <set_command_action commandaction="commandaction.flyingto" param="$SECTOR"/>
         <run_script name="'move.generic'">
            <param name="destination" value="$SECTOR"/>
            <param name="position" value="$_Position"/>
            <param name="playerprecise" value="true"/>
            <param name="recallsubordinates" value="false"/>
            <param name="changecommandaction" value="false"/>
            <param name="debugchance" value="0"/>
         </run_script>

         <label name="FINISH_MOVING_LBL"/>
         <stop_moving object="$_Ship" immediate="true"/>
         <wait exact="1000ms"/>

         <launch_satellite object="$_Ship" macro="$SATELLITE_MACRO" name="$_Satellite"/>
         <set_object_velocity object="$_Satellite">
            <linear x="0" y="0" z="0"/>
         </set_object_velocity>

         <set_object_name object="$_Satellite" name="'\033#FF00CC66#' + $SATELLITE_MACRO.name + '\033X\033#FF00CCCC#' + ' ~ ' + $_Satellite.sector.knownname + '\033X'"/>

         <apply_experience entity="$_Ship.pilot" experience="'JP_SHIP_SATELLITE_PLACE'"/>
         <apply_experience object="$_Ship" experience="'JP_SHIP_SATELLITE_PLACE'" role="entityrole.service"/>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="FINISH_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

      </actions>
   </attention>

   <on_abort>
   </on_abort>

</aiscript>