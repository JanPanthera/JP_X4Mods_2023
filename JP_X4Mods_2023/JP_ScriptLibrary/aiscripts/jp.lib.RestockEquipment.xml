<?xml version="1.0" encoding="utf-8"?>

<aiscript name="jp.lib.RestockEquipment" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

   <params>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="EQUIPMENT_TABLE" default="table[]"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="SHOW_MESSAGES" default="0"/>
      <param name="WRITE_TO_LOG" default="0"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="DEBUG_FOLDER_NAME" default="'JP_ScriptLibrary.logs'"/>
      <param name="DEBUG" default="0"/>
      <param name="debugchance" default="0"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </params>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <set_value name="$_Result" exact="'Failed'"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$DEBUG gt 0">
         <set_value name="$_DebugFolderName" exact="$DEBUG_FOLDER_NAME"/>
         <set_value name="$_DebugScriptName" exact="'jp.lib.RestockEquipment'"/>
         <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </init>

   <attention min="unknown">
      <actions>

         <label name="INIT_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="RESUME_LBL"/>
         <wait exact="1ms"/>

         <set_command command="command.resupply"/>
         <set_command_action commandaction="commandaction.calculating"/>

         <create_list name="$_FoundStations"/>
         <run_script name="'jp.lib.FindStationToEquipAt'">
            <param name="DEBUG_FOLDER_NAME" value="$DEBUG_FOLDER_NAME"/>
            <param name="DEBUG" value="$DEBUG"/>
            <save_retval name="_FoundStations" variable="$_FoundStations"/>
         </run_script>

         <!-- Currently, there are no available stations where we could restock our desired equipment. Go idle. -->
         <do_if value="$_FoundStations.count == 0">
            <write_to_logbook category="upkeep" object="$_Ship" interaction="showonmap" title="{8888888, 60} + ' ~ ' + '%1 [%2]'.[$_Ship.knownname, $_Ship.idcode]" text="{8888888, 50}" chance="$WRITE_TO_LOG"/>
            <resume label="FINISH_LBL"/>
         </do_if>

         <set_value name="$_WantedLoadoutTable" exact="table[]"/>
         <do_for_each name="$_EquipmentMacro" valuename="$_EquipmentAmount" in="$_Ship.ammostorage.missile.table">
            <set_value name="$_WantedLoadoutTable.{$_EquipmentMacro}" exact="$_EquipmentAmount"/>
         </do_for_each>
         <do_for_each name="$_EquipmentMacro" valuename="$_EquipmentAmount" in="$_Ship.ammostorage.countermeasure.table">
            <set_value name="$_WantedLoadoutTable.{$_EquipmentMacro}" exact="$_EquipmentAmount"/>
         </do_for_each>
         <do_for_each name="$_EquipmentMacro" valuename="$_EquipmentAmount" in="$_Ship.ammostorage.deployable.table">
            <set_value name="$_WantedLoadoutTable.{$_EquipmentMacro}" exact="$_EquipmentAmount"/>
         </do_for_each>
         <do_for_each name="$_EquipmentMacro" valuename="$_EquipmentAmount" in="$EQUIPMENT_TABLE">
            <set_value name="$_WantedLoadoutTable.{$_EquipmentMacro}" exact="$_EquipmentAmount"/>
         </do_for_each>

         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$DEBUG_FOLDER_NAME" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
            <debug_to_file directory="$DEBUG_FOLDER_NAME" name="$_DebugFileName" text="'$_WantedLoadoutTable.keys.count: %1'.[$_WantedLoadoutTable.keys.count]"/>
            <debug_to_file directory="$DEBUG_FOLDER_NAME" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
            <do_for_each name="$_EquipmentMacro" valuename="$_EquipmentAmount" in="$_WantedLoadoutTable">
               <debug_to_file directory="$DEBUG_FOLDER_NAME" name="$_DebugFileName" text="'$_EquipmentMacro: %1 ~ $_EquipmentAmount: %2'.[$_EquipmentMacro, $_EquipmentAmount]"/>
            </do_for_each>
            <debug_to_file directory="$DEBUG_FOLDER_NAME" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

         <set_value name="$_StationWareCheckTable" exact="table[]"/>
         <do_for_each name="$_EquipmentMacro" valuename="$_EquipmentAmount" in="$EQUIPMENT_TABLE">
            <set_value name="$_StationWareCheckTable.{$_EquipmentMacro.ware}" exact="$_EquipmentAmount - $_Ship.ammostorage.{$_EquipmentMacro}.count"/>
         </do_for_each>
         <set_value name="$_RestockStation" exact="null"/>
         <do_for_each name="$_Station" in="$_FoundStations">
            <do_if value="$_Station.hasresourcesfor.{$_StationWareCheckTable}">
               <set_value name="$_RestockStation" exact="$_Station"/>
               <break/>
            </do_if>
         </do_for_each>
         <remove_value name="$_StationWareCheckTable"/>

         <!-- Currently, all discovered stations lack the necessary resources to manufacture the desired equipment. Go idle. -->
         <do_if value="$_RestockStation" exact="null">
            <write_to_logbook category="upkeep" object="$_Ship" interaction="showonmap" title="{8888888, 60} + ' ~ ' + '%1 [%2]'.[$_Ship.knownname, $_Ship.idcode]" text="{8888888, 51}" chance="$WRITE_TO_LOG"/>
            <resume label="FINISH_LBL"/>
         </do_if>

         <set_value name="$_RestockPrice" exact="0Cr"/>
         <do_for_each name="$_EquipmentMacro" valuename="$_EquipmentAmount" in="$EQUIPMENT_TABLE">
            <set_value name="$_RestockPrice" exact="($_RestockStation.buildprice.{$_EquipmentMacro.ware} * ($_EquipmentAmount - $_Ship.ammostorage.{$_EquipmentMacro}.count))Cr" operation="add"/>
         </do_for_each>
         <!-- We lack the necessary funds to restock the desired equipment. Go idle. -->
         <do_if value="($_RestockPrice + 100000Cr) gt $_Ship.owner.money">
            <write_to_logbook category="upkeep" object="$_Ship" interaction="showonmap" title="{8888888, 60} + ' ~ ' + '%1 [%2]'.[$_Ship.knownname, $_Ship.idcode]" text="{8888888, 52}" chance="$WRITE_TO_LOG"/>
            <resume label="FINISH_LBL"/>
         </do_if>

         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$DEBUG_FOLDER_NAME" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'"/>
            <debug_to_file directory="$DEBUG_FOLDER_NAME" name="$_DebugFileName" text="'$_RestockPrice: %1'.[$_RestockPrice.formatted.{'%.s %Cr'}]"/>
            <debug_to_file directory="$DEBUG_FOLDER_NAME" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

         <add_build_to_modify_ship buildobject="$_Ship" object="$_RestockStation" ammo="$_WantedLoadoutTable" price="$_RestockPrice" immediate="true" result="$_Result"/>

         <!-- The process of creating the restock order has failed. Go idle. -->
         <do_if value="not $_Result">
            <set_value name="$_ResumeCounter" exact="if not $_ResumeCounter? then 0 else ($_ResumeCounter + 1)"/>
            <do_if value="$_ResumeCounter ge 3">
               <write_to_logbook category="upkeep" object="$_Ship" interaction="showonmap" title="{8888888, 60} + ' ~ ' + '%1 [%2]'.[$_Ship.knownname, $_Ship.idcode]" text="{8888888, 53}" chance="$WRITE_TO_LOG"/>
               <set_value name="$_Result" exact="'Failed'"/>
               <resume label="FINISH_LBL"/>
            </do_if>
            <wait min="1s" max="2s"/>
            <resume label="RESUME_LBL"/>
         </do_if>

         <set_value name="$_Result" exact="'Success'"/>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="FINISH_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

         <return>
            <retval name="_Result" value="$_Result"/>
         </return>

      </actions>
   </attention>

   <on_abort>
   </on_abort>

</aiscript>