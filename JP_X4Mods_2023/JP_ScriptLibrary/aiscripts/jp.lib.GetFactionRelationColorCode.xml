<?xml version="1.0" encoding="utf-8"?>

<aiscript name="jp.lib.GetFactionRelationColorCode" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="aiscripts.xsd">

   <params>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="FACTION_RELATION" default="null"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <param name="DEBUG_FOLDER_NAME" default="'JP_ScriptLibrary.logs'"/>
      <param name="DEBUG" default="0"/>
      <param name="debugchance" default="0"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </params>

   <init>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <set_value name="$_Ship" exact="this.ship"/>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <do_if value="$DEBUG gt 0">
         <set_value name="$_DebugFolderName" exact="$DEBUG_FOLDER_NAME"/>
         <set_value name="$_DebugScriptName" exact="'jp.lib.GetFactionRelationColorCode'"/>
         <set_value name="$_DebugFileName" exact="$_Ship.idcode + '.' + $_DebugScriptName + '.xml.log'"/>
      </do_if>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   </init>

   <attention min="unknown">
      <actions>

         <label name="INIT_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~'" append="false"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_START ~~' + '\n'"/>
         </do_if>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="RESUME_LBL"/>
         <wait exact="1ms"/>

         <set_command_action commandaction="commandaction.calculating"/>

         <set_value name="$_Red"        exact="[255, 0,   0]"/>
         <set_value name="$_LightRed"   exact="[255, 100, 100]"/>
         <set_value name="$_Gray"       exact="[128, 128, 128]"/>
         <set_value name="$_LightGreen" exact="[128, 255, 128]"/>
         <set_value name="$_Green"      exact="[0,   255, 0]"/>
         <set_value name="$_Blue"       exact="[0,   136, 255]"/>


         <do_if value="$FACTION_RELATION le -10">
            <set_value name="$_Properties" exact="[$_Red, $_LightRed, ((($FACTION_RELATION)f + 30.0) / 20.0)]"/>
         </do_if>
         <do_elseif value="$FACTION_RELATION le 0">
            <set_value name="$_Properties" exact="[$_LightRed, $_Gray, ((($FACTION_RELATION)f + 10.0) / 10.0)]"/>
         </do_elseif>
         <do_elseif value="$FACTION_RELATION le 10">
            <set_value name="$_Properties" exact="[$_Gray, $_LightGreen, (($FACTION_RELATION)f - 0.0) / 10.0]"/>
         </do_elseif>
         <do_elseif value="$FACTION_RELATION le 15">
            <set_value name="$_Properties" exact="[$_LightGreen, $_Green, (($FACTION_RELATION)f - 10.0) / 5.0]"/>
         </do_elseif>
         <do_elseif value="$FACTION_RELATION le 30">
            <set_value name="$_Properties" exact="[$_Green, $_Blue, (($FACTION_RELATION)f - 15.0) / 15.0]"/>
         </do_elseif>
         <do_else>
            <set_value name="$_Properties" exact="[$_Blue, $_Blue, 1.0]"/>
         </do_else>

         <!-- 
            <set_value name="$_R" exact="($_Red.{1} * (1 - $_BlendRatio) + $_LightRed.{1} * $_BlendRatio)i"/>
            <set_value name="$_G" exact="($_Red.{2} * (1 - $_BlendRatio) + $_LightRed.{2} * $_BlendRatio)i"/>
            <set_value name="$_B" exact="($_Red.{3} * (1 - $_BlendRatio) + $_LightRed.{3} * $_BlendRatio)i"/>
         -->
         <set_value name="$_R" exact="($_Properties.{1}.{1} * (1 - $_Properties.{3}) + $_Properties.{2}.{1} * $_Properties.{3})i"/>
         <set_value name="$_G" exact="($_Properties.{1}.{2} * (1 - $_Properties.{3}) + $_Properties.{2}.{2} * $_Properties.{3})i"/>
         <set_value name="$_B" exact="($_Properties.{1}.{3} * (1 - $_Properties.{3}) + $_Properties.{2}.{3} * $_Properties.{3})i"/>

         <run_script name="'jp.lib.ConvertARGBtoHex'">
            <param name="ALPHA" value="255"/>
            <param name="RED" value="$_R"/>
            <param name="GREEN" value="$_G"/>
            <param name="BLUE" value="$_B"/>
            <param name="DEBUG_FOLDER_NAME" value="@$_DebugFolderName"/>
            <param name="DEBUG" value="$DEBUG"/>
            <save_retval name="_HexColorString" variable="$_FactionRelationColorCode"/>
         </run_script>

         <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

         <label name="FINISH_LBL"/>
         <wait exact="1ms"/>
         <do_if value="$DEBUG gt 0">
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'[' + player.systemtime.{'%F - %X'} + '] ' + '~~ ' + $_DebugScriptName + '.xml ~ SCRIPT_END ~~'"/>
            <debug_to_file directory="$_DebugFolderName" name="$_DebugFileName" text="'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n'"/>
         </do_if>

         <return>
            <retval name="_FactionRelationColorCode" value="$_FactionRelationColorCode"/>
         </return>

      </actions>
   </attention>

   <on_abort>
   </on_abort>

</aiscript>